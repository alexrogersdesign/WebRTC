{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "sourceMap": true,
    "moduleResolution": "node",
    "types": [
      "node",
      "webdriverio/async",
      "@wdio/mocha-framework",
      "expect-webdriverio",
      "mocha"
    ],
    "esModuleInterop": true,
    "noEmitHelpers": false,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "@src/*": ["src/*"],
      "@e2e/*": ["src/frontend-e2e/*"],
      "@/*": ["./*"],
      "@e2ePage/*": ["src/frontend-e2e/pageobjects/*"]
    }
  },
  "include": [
    "./src/**/*",
    "./"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.mjs",
    "src/**/*.cjs"
  ]
}
